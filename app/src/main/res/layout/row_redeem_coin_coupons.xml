<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_black"
    android:paddingBottom="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvCouponImage"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_2">
    <ImageView
        android:id="@+id/ivCouponImage"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@color/tab_grey" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/cvCouponImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCoupanName"
            style="@style/TitleSemiBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paytm"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tvCoupanValue"
            style="@style/Subtitle_2_MediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@string/text_for_coupon"
           />
    </LinearLayout>

</RelativeLayout>