<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBuyInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_2"
    android:paddingEnd="@dimen/dp_0">

    <com.google.android.material.internal.FlowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:itemSpacing="@dimen/dp_5"
        app:lineSpacing="@dimen/dp_2">

        <TextView
            android:id="@+id/tvMrpPrice"
            style="@style/Subtitle_2_MediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/tab_text_grey" />

        <TextView
            android:id="@+id/tvPercentOff"
            style="@style/Body_1_MediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/tab_text_grey" />

    </com.google.android.material.internal.FlowLayout>

    <LinearLayout
        android:id="@+id/ll_buy_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSellingPrice"
            style="@style/HeaderRegularStyleRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_2"
            android:text=""
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvDivider"
            style="@style/HeaderRegularStyleRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_2"
            android:text="@string/divider"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvSellingCoins"
            style="@style/HeaderRegularStyleRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_2"
            android:drawableLeft="@drawable/ic_coin"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/colorYellow"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFree"
            style="@style/HeaderRegularStyleRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_5"
            android:maxLines="1"
            android:text="@string/label_free"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />

        <!--<LinearLayout
            android:id="@+id/llRewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_5"
                android:contentDescription="@null"
                android:src="@drawable/ic_giftbox"/>-->

        <TextView
            android:id="@+id/tvReward"
            style="@style/Subtitle_2_MediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/ic_giftbox"
            android:drawablePadding="2dp"
            android:textColor="@color/colorYellow" />
        <!--</LinearLayout>-->
    </LinearLayout>


    <com.google.android.material.internal.FlowLayout
        android:id="@+id/flCoins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:itemSpacing="@dimen/dp_5"
        app:lineSpacing="@dimen/dp_2">

        <TextView
            android:id="@+id/tvUseOrWin"
            style="@style/Subtitle_2_MediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use"
            android:textColor="@color/tab_text_grey"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_marginEnd="@dimen/dp_5"
                android:contentDescription="@null"
                android:src="@drawable/ic_coin"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCoins"
                style="@style/Subtitle_2_MediumStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorYellow" />
        </LinearLayout>
    </com.google.android.material.internal.FlowLayout>
</LinearLayout>
