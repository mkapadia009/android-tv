<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_15">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15">

            <TextView
                android:id="@+id/tvStoreName"
                style="@style/HeaderSemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvMessage"
                style="@style/TitleRegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStoreName"
                android:layout_marginTop="@dimen/dp_10"
                android:text=""
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llFooterAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/rlHeader"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btNegative"
                style="@style/Subtitle_1_SemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@android:color/transparent"
                android:minHeight="@dimen/dp_35"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/colorGray" />

            <Button
                android:id="@+id/btPositive"
                style="@style/Subtitle_1_SemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:minHeight="@dimen/dp_35"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>