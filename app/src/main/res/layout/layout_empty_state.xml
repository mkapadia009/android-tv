<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emptyStateParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="80sp"
        android:visibility="gone"
        tools:textColor="@color/black" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        tools:src="@drawable/timeout" />

    <TextView
        android:id="@+id/tvMsg"
        style="@style/Subtitle_1_MediumStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        tools:text="No active live sessions available"
        tools:textColor="@color/black"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvMsg2"
        style="@style/Subtitle_2_RegularStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        tools:text="Pull down to refresh or tap retry."
        tools:textColor="@color/black"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn"
        style="@style/TitleSemiBoldStyle"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/bg_accent"
        android:minHeight="@dimen/dp_40"
        android:padding="@dimen/dp_8"
        android:text="@string/retry"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="Retry"
        tools:textColor="@color/white"
        tools:visibility="visible" />

</LinearLayout>