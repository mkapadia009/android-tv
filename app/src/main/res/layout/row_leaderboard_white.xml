<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLeaderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_10"
            android:gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/crown"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:gravity="center">

            <TextView
                android:id="@+id/tvLeaderName"
                style="@style/Subtitle_2_SemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="@dimen/dp_20"
                android:text="djhfksjdhfk"
                android:textColor="@color/colorWhite"
                 />

            <TextView
                android:id="@+id/tvLeaderCoin"
                style="@style/Subtitle_2_SemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/ic_coin"
                android:drawablePadding="@dimen/dp_15"
                android:textColor="@color/lt_yellow"
                android:text="TextView" />
        </RelativeLayout>
    </LinearLayout>