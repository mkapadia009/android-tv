<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/back_black"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_0_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/tvLeaderNo"
            style="@style/Subtitle_2_SemiBoldStyle"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivLeaderUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvLeaderNo"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            app:civ_border="true"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/ivLeaderUser"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLeaderName"
                style="@style/Subtitle_1_SemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="@dimen/dp_20"
                android:text="TextView"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tvLeaderCoin"
                style="@style/Subtitle_2_MediumStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLeaderName"
                android:layout_marginTop="@dimen/dp_5"
                android:drawableLeft="@drawable/ic_coin"
                android:drawablePadding="@dimen/dp_5"
                android:text="TextView"
                android:textColor="@color/text_gray" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivCrown"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/crown" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>