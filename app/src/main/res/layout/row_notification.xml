<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_black"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/tvNotificationTitle"
        style="@style/TitleSemiBoldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tvnotifdate"
        android:text="@string/paytm"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvNotificationSubtitle"
        style="@style/Subtitle_2_MediumStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tvnotifTime"
        android:layout_below="@+id/tvNotificationTitle"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/watch_now"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/tvnotifdate"
        style="@style/Subtitle_2_MediumStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvNotificationTitle"
        android:text="Nov 4"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/tvnotifTime"
        style="@style/Subtitle_2_MediumStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/tvnotifdate"
        android:text="6:00 Pm"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>