<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_8">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:background = "@drawable/bg_comment__gray_color">
    <LinearLayout
        android:id="@+id/authorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/colorAccent"
            style="@style/CommentUserInfoTextStyle"
            android:textSize="@dimen/sp_11"
            android:paddingRight="@dimen/dp_8"/>
        <TextView
            android:id="@+id/txtAuthorMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtAuthorName"
            android:layout_below="@+id/txtComment"
            android:text="998****877"
            style="@style/CommentUserInfoTextStyle"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorContainer"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            android:id="@+id/txtComment"
            android:layout_below="@+id/authorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment Text"
            style="@style/CommentContentTextStyle"
            android:textColor="@android:color/white"
            android:visibility="visible"/>
    </LinearLayout>
</RelativeLayout>

</LinearLayout>