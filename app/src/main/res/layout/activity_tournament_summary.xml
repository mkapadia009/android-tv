<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activity.TournamentSummaryActivity">

    <include
        android:id="@+id/llprogressbar"
        layout="@layout/progress_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTournamentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:gravity="center"
                    android:text="Tournament Name"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/_17sdp" />

                <TextView
                    style="@style/TitleSemiBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/registration_dates"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRegistrationStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tvRegistrationEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/white"
                    android:minHeight="@dimen/dp_1" />

                <TextView
                    style="@style/TitleSemiBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/tournament_dates"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTournamentStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tvTournamentEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center"
                        android:textColor="@color/colorYellow"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_25"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Header_2_SemiBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/entry_criteria"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvEntryFees"
                        style="@style/HeaderRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="Rs. 100"
                        android:textColor="@color/colorYellow" />

                    <TextView
                        android:id="@+id/tvOr"
                        style="@style/HeaderRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:text="@string/s_or"
                        android:textColor="@color/colorYellow" />

                    <TextView
                        android:id="@+id/tvCoinsForEntry"
                        style="@style/HeaderRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:drawableRight="@drawable/ic_coin"
                        android:text="1000"
                        android:textColor="@color/colorYellow" />
                    <TextView
                        android:id="@+id/tvFree"
                        style="@style/HeaderRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:text="@string/label_free"
                        android:visibility="gone"
                        android:textColor="@color/colorYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Header_2_SemiBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/coins_for_entry"
                        android:textColor="@color/white" />

                    <!--<TextView
                        android:id="@+id/tvCoinsForEntry"
                        style="@style/HeaderRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableRight="@drawable/ic_coin"
                        android:text="1000"
                        android:textColor="@color/white" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Header_2_SemiBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/prize"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvPrize"
                        style="@style/HeaderRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:drawableRight="@drawable/ic_coin"
                        android:text="5000"
                        android:textColor="@color/colorYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Header_2_SemiBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/registration_reward"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvRegistrationReward"
                        style="@style/HeaderRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:drawableRight="@drawable/ic_coin"
                        android:text="5000"
                        android:textColor="@color/colorYellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Header_2_SemiBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/payment_status"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvPaymentStatus"
                        style="@style/HeaderRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="@string/pending"
                        android:textColor="@color/colorYellow" />
                </LinearLayout>

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:fitsSystemWindows="true"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/collapsetoolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:contentScrim="@color/back_black"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">

                        <!--********************** Player View *********************************-->

                        <RelativeLayout
                            android:id="@+id/rlTeaserImage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:fitsSystemWindows="true"
                            app:layout_collapseMode="parallax">

                            <ImageView
                                android:id="@+id/ivTeaserImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/tab_grey"
                                android:fitsSystemWindows="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/esportsimage" />

                            <LinearLayout
                                android:id="@+id/llTeaser"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#66000000"
                                android:orientation="vertical" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/ivPlay"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"
                                    android:layout_centerInParent="true"
                                    android:background="@null"
                                    android:src="@drawable/ic_app_icon_play" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <!--********************** Toolbar *********************************-->

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_custom_size"
                            app:layout_collapseMode="pin"
                            app:popupTheme="@style/AppTheme.PopupOverlay" />
                    </com.google.android.material.appbar.CollapsingToolbarLayout>
                </com.google.android.material.appbar.AppBarLayout>

                <TextView
                    android:id="@+id/tvTeamName"
                    style="@style/TitleSemiBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/llParticipants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_back_black"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/btnPaynow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/bg_button"
                    android:fontFamily="@font/rubik_bold"
                    android:minHeight="@dimen/dp_10"
                    android:text="@string/pay_now"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/sp_17"
                    android:visibility="gone" />

                <!--payment option-->
                <LinearLayout
                    android:id="@+id/llPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/bg_tab_gray_color"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20"
                    android:visibility="gone">

                    <TextView
                        style="@style/TitleMediumStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/please_select_your_payment_option"
                        android:textColor="@color/colorAccent" />

                    <RelativeLayout
                        android:id="@+id/rlPayTm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            app:cardCornerRadius="@dimen/dp_4"
                            app:cardElevation="@dimen/dp_2">

                            <ImageView
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/dp_2"
                                android:contentDescription="@null"
                                android:scaleType="centerCrop"
                                android:src="@drawable/paytm_logo" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            style="@style/TitleMediumStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_toEndOf="@+id/cvImage"
                            android:text="@string/paytm_desc_label"
                            android:textColor="@color/colorWhite" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlRazorPay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvImageRazorPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            app:cardCornerRadius="@dimen/dp_4"
                            app:cardElevation="@dimen/dp_2">

                            <ImageView
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/dp_2"
                                android:contentDescription="@null"
                                android:scaleType="centerCrop"
                                android:src="@drawable/razorpay_logo" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            style="@style/TitleMediumStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_toEndOf="@+id/cvImageRazorPay"
                            android:text="@string/razorpay_desc_label"
                            android:textColor="@color/colorWhite" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlCoinsPay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvCoinsPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            app:cardCornerRadius="@dimen/dp_4"
                            app:cardElevation="@dimen/dp_2">

                            <ImageView
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/dp_2"
                                android:contentDescription="@null"
                                android:scaleType="centerCrop"
                                android:src="@drawable/coin_toolbar" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvCoins"
                            style="@style/TitleMediumStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_toEndOf="@+id/cvCoinsPay"
                            android:text="Coins"
                            android:textColor="@color/colorWhite" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTelegramLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/telegram" />

                    <TextView
                        style="@style/TitleSemiBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/join_telegram_channel"
                        android:textColor="@color/white" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@color/white"
                    android:minHeight="@dimen/dp_1" />

                <RelativeLayout
                    android:id="@+id/rlRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TitleSemiBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rules"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/ivCollapsed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_collapsed_down"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivExpand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_expand_up"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"></LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@color/white"
                    android:minHeight="@dimen/dp_1"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/TitleSemiBoldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_collapsed_down"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_25"
                        android:src="@drawable/ic_expand_up"
                        android:visibility="invisible" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>