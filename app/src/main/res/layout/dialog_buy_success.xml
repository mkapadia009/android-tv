<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_grey"
    android:padding="@dimen/dp_25">

    <TextView
        android:id="@+id/tvStoreName"
        style="@style/HeaderMediumStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/item_has_been_purchased_successfully"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btViewPurchases"
        style="@style/TitleSemiBoldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStoreName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_accent"
        android:minHeight="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:text="@string/view_purchases"
        android:textColor="@color/back_black"/>
</RelativeLayout>