<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlCoupons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_7"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@color/back_black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFeedImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/dp_6">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/tab_grey"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvStoreName"
        style="@style/Subtitle_2_MediumStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvFeedImage"
        android:layout_alignStart="@+id/cvFeedImage"
        android:layout_alignEnd="@+id/cvFeedImage"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_15"
        android:singleLine="false"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/newColorText"
        android:visibility="gone"
        tools:text="Entertainment" />

</RelativeLayout>