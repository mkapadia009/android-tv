<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tab_grey"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_offer_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular_std_medium_500"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:shadowColor="@android:color/black"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="15"
            android:text="Do you want to exit iTap?"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_yes"
                style="@style/Subtitle_2_SemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="20dp"
                android:background="@drawable/border_button"
                android:fontFamily="@font/circular_std_medium_500"
                android:nextFocusLeft="@id/bt_yes"
                android:nextFocusRight="@id/bt_no"
                android:nextFocusUp="@id/bt_yes"
                android:nextFocusDown="@id/bt_yes"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <Button
                android:id="@+id/bt_no"
                style="@style/Subtitle_2_SemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="20dp"
                android:background="@drawable/border_button"
                android:fontFamily="@font/circular_std_medium_500"
                android:nextFocusLeft="@id/bt_yes"
                android:nextFocusRight="@id/bt_no"
                android:nextFocusUp="@id/bt_no"
                android:nextFocusDown="@id/bt_no"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>