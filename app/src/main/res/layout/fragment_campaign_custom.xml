<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_black"
    tools:context=".fragment.CampaignCustomFrag">

    <TextView
        android:id="@+id/tv_title_cust"
        style="@style/HeaderBoldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:fontFamily="@font/gooddp__"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toTopOf="@id/tv_subTitle_cust"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lucky Draw Contest" />

    <TextView
        android:id="@+id/tv_subTitle_cust"
        style="@style/HeaderSemiBoldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:fontFamily="@font/rifficfree_bold"
        android:gravity="center"
        android:textColor="@color/lt_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_cust"
        tools:text="Win a Redmi 6A phone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:elevation="5dp"
        app:cardCornerRadius="@dimen/dp_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subTitle_cust">

        <ImageView
            android:id="@+id/iv_content_image_cust"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_300"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_money_refer" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_description_cust"
        style="@style/TitleSemiBoldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:paddingStart="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_50"
        android:textColor="@color/newColorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_card"
        tools:text="Enroll now to get a chance to \n Win a Redmi 6A phone!" />

    <Button
        android:id="@+id/btn_enroll_cust"
        style="@style/AppButtonStyle"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/bg_accent"
        android:gravity="center"
        android:text="@string/enroll_now"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description_cust" />

    <TextView
        android:id="@+id/tv_noThanks_cust"
        style="@style/TitleMediumStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:paddingStart="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_50"
        android:textColor="@color/newColorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_enroll_cust"
        tools:text="No, Thanks" />

</androidx.constraintlayout.widget.ConstraintLayout>