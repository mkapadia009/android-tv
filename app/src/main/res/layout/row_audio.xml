<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_win_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        style="@style/Body_2_SemiBoldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_coin"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/play_win_10_coins"
        android:textColor="@color/colorBlack" />

    <RelativeLayout
        android:id="@+id/rlAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fitsSystemWindows="true"
            android:src="@drawable/audio_play" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/ivImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStoreName"
                style="@style/Subtitle_2_SemiBoldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Gazals by Gulzar"
                android:textColor="@android:color/black" />

            <TextView
                style="@style/Body_1_RegularStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:text="@string/label_tap_here_to_listen" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>