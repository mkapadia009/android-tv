<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_grey"
    android:padding="@dimen/dp_25">

    <TextView
        android:id="@+id/tvStoreName"
        style="@style/HeaderMediumStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text=""
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStoreName"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btNegative"
            style="@style/Subtitle_1_SemiBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@android:color/transparent"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            tools:text="Cancel" />

        <TextView
            android:id="@+id/btNeutral"
            style="@style/Subtitle_1_SemiBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@android:color/transparent"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            tools:text="Ok" />

        <TextView
            android:id="@+id/btPositive"
            style="@style/Subtitle_1_SemiBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorAccent"
            android:visibility="visible"
            tools:text="Sure" />
    </LinearLayout>
</RelativeLayout>